<%- include('partials/header.ejs') %>

<form class="flex flex-col gap-2 items-center" action="/update/<%= data.id %>" method="post">
    <label class="font-semibold" for="title">Title</label><br>
    <input class="border-black border-2 rounded-md w-1/2 p-4 text-center" type="text" id="title" name="title" required maxlength="50" value="<%= data.title %>"><br>
    <label class="font-semibold" for="desp">What do you want to Say?</label><br>
    <textarea class="border-black border-2 rounded-md p-4 text-center w-3/4" type="text" id="desp" name="desp" rows="10" required><%= data.desp %></textarea>
    <br>
    <button class="bg-purple-500 rounded-md p-2 text-white" type="submit">Submit</button>
</form>
<%- include('partials/footer.ejs') %>